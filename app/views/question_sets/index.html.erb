<p id="notice"><%= notice %></p>

<h1>Question Sets</h1>

<table class="table table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_sets.select{|q| !q.is_readonly}.each do |question_set| %>
      <tr>
        <td><%= question_set.name %></td>
        <td><%= link_to 'Show', question_set %></td>
        <td><%= link_to 'Edit', edit_question_set_path(question_set) %></td>
        <td><%= button_to 'Destroy', question_set, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Question Set', new_question_set_path, {class: 'btn btn-default', method: :get} %>
