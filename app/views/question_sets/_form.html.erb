<%= form_with(model: question_set, local: true) do |form| %>
  <% if question_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question_set.errors.count, "error") %> prohibited this question_set from being saved:</h2>

      <ul>
      <% question_set.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :question_set_name %>
  </div>

  <div class="field">
    <%= form.label :is_readonly %>
    <%= form.check_box :is_readonly, id: :question_set_is_readonly %>
  </div>

  <table border="1">
    <tr>
      <th>Question</th>
      <th>Tags</th>
    </tr>
    <% Question.all.each do |q| %>
      <tr>
        <td><%= q.body %></td>
        <td><%= q.tags.join(", ") %></td>
      </tr>
    <% end %>
  </table>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

