<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Users</h1>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    isAdmin
                </th>
                <th>
                    isProfessor
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.fname %></td>
                    <td><%= user.lname %></td>
                    <td><%= user.is_admin %></td>
                    <td><%= user.is_professor %></td>
                    <td>
                        <div>
                            <div style="float:left;margin-left:5px">
                                <%= button_to "Show", user, {class: 'btn btn-primary', method: :get} %>
                            </div>
                            <div style="float:left;margin-left:5px">
                                <%= button_to "Edit", edit_user_path(user), {class: 'btn btn-primary', method: :get} %>
                            </div>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>
<%= button_to "Create New User", new_user_path, {class: 'btn btn-primary', method: :get} %>
